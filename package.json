{
  "name": "polar",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start-dev": "REACT_DEBUGGER='rndebugger-open --open --port 8081' npm start",
    "postinstall": "rndebugger-open",
    "test": "jest",
    "test-redux": "jest src/store",
    "storybook": "storybook start -p 7007",
    "prestorybook": "rnstl"
  },
  "dependencies": {
    "react": "16.0.0-alpha.12",
    "react-native": "0.48.3",
    "react-native-storybook-loader": "^1.5.1",
    "react-navigation": "^1.0.0-beta.13",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.10",
    "@storybook/addon-links": "^3.2.10",
    "@storybook/react-native": "^3.2.10",
    "babel-jest": "21.0.2",
    "babel-preset-react-native": "4.0.0",
    "jest": "21.1.0",
    "prop-types": "^15.5.10",
    "react-dom": "16.0.0-alpha.12",
    "react-native-debugger-open": "^0.3.12",
    "react-test-renderer": "16.0.0-alpha.12"
  },
  "jest": {
    "preset": "react-native"
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src"
      ],
      "pattern": "**/*.stories.js",
      "outputFile": "./storybook/storyLoader.js"
    }
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/Dosis",
      "./assets/fonts/Josefin_Slab",
      "./assets/fonts/Roboto"
    ]
  }
}
